<UserControl x:Class="LocalLLMChatVS.ToolWindows.ChatWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400"
             Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarGradientBrushKey}}"
                BorderBrush="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarBorderBrushKey}}"
                BorderThickness="0,0,0,1"
                Padding="10">
            <DockPanel>
                <TextBlock Text="Local LLM Chat"
                           FontWeight="Bold"
                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                           VerticalAlignment="Center"/>
                <Button x:Name="ClearButton"
                        Content="Clear"
                        Click="ClearButton_Click"
                        HorizontalAlignment="Right"
                        Padding="10,5"
                        Margin="5,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1"
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}">
            <ItemsControl x:Name="MessagesContainer" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,10"
                                Padding="10"
                                CornerRadius="5"
                                BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Role}" Value="user">
                                            <Setter Property="Background" Value="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
                                            <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Role}" Value="assistant">
                                            <Setter Property="Background" Value="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
                                            <Setter Property="BorderBrush" Value="#FF68217A"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Role}" Value="system">
                                            <Setter Property="Background" Value="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
                                            <Setter Property="BorderBrush" Value="#FF339933"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Role}" Value="error">
                                            <Setter Property="Background" Value="#FFFFE6E6"/>
                                            <Setter Property="BorderBrush" Value="#FFFF0000"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock Text="{Binding Role}"
                                           FontWeight="Bold"
                                           FontSize="10"
                                           Margin="0,0,0,5"
                                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                                <TextBlock Text="{Binding Content}"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Area -->
        <Border Grid.Row="2"
                Background="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarGradientBrushKey}}"
                BorderBrush="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarBorderBrushKey}}"
                BorderThickness="0,1,0,0"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="InputTextBox"
                         Grid.Row="0"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
                         Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                         BorderBrush="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarBorderBrushKey}}"
                         Padding="5"
                         KeyDown="InputTextBox_KeyDown"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                    <Button x:Name="SendButton"
                            Content="Send"
                            Click="SendButton_Click"
                            Padding="15,5"
                            MinWidth="80"/>
                    <TextBlock Text="Ctrl+Enter to send | Type /help for commands"
                               FontSize="10"
                               Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ControlLinkTextBrushKey}}"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
